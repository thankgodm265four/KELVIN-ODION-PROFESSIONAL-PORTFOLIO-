---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation";
import Footer from "../components/Footer";
---

<BaseLayout
  title="Contact"
  description="Get in touch with Luxe Estates. Our team of luxury real estate experts is ready to help you find your dream property."
>
  <Navigation client:load />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 relative overflow-hidden hero-gradient">
    <div class="absolute inset-0 opacity-30">
      <div
        class="absolute top-1/4 right-1/4 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="container-premium relative text-center">
      <span class="badge badge-gold mb-4">Get In Touch</span>
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-6"
      >
        Let's Start a <span class="text-gradient">Conversation</span>
      </h1>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Whether you're looking to buy, sell, or simply have questions about the
        luxury real estate market, we're here to help.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16">
    <div class="container-premium">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div class="glass rounded-3xl p-8 md:p-10">
            <h2 class="text-2xl font-display font-bold text-white mb-2">
              Send Us a Message
            </h2>
            <p class="text-slate-400 mb-8">
              Fill out the form below and we'll get back to you within 24 hours.
            </p>

            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm text-slate-400 mb-2"
                    >First Name</label
                  >
                  <input
                    type="text"
                    placeholder="John"
                    class="input-premium w-full"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm text-slate-400 mb-2"
                    >Last Name</label
                  >
                  <input
                    type="text"
                    placeholder="Doe"
                    class="input-premium w-full"
                    required
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm text-slate-400 mb-2">Email</label>
                  <input
                    type="email"
                    placeholder="john@example.com"
                    class="input-premium w-full"
                    required
                  />
                </div>
                <div>
                  <label class="block text-sm text-slate-400 mb-2">Phone</label>
                  <input
                    type="tel"
                    placeholder="+1 (555) 123-4567"
                    class="input-premium w-full"
                  />
                </div>
              </div>

              <div>
                <label class="block text-sm text-slate-400 mb-2"
                  >Interested In</label
                >
                <select
                  class="input-premium w-full appearance-none cursor-pointer"
                >
                  <option value="">Select an option</option>
                  <option value="buying">Buying a Property</option>
                  <option value="selling">Selling a Property</option>
                  <option value="investing">Real Estate Investment</option>
                  <option value="consultation">General Consultation</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label class="block text-sm text-slate-400 mb-2"
                  >Budget Range</label
                >
                <select
                  class="input-premium w-full appearance-none cursor-pointer"
                >
                  <option value="">Select a range</option>
                  <option value="under-1m">Under $1 Million</option>
                  <option value="1m-3m">$1M - $3 Million</option>
                  <option value="3m-5m">$3M - $5 Million</option>
                  <option value="5m-10m">$5M - $10 Million</option>
                  <option value="10m+">$10 Million+</option>
                </select>
              </div>

              <div>
                <label class="block text-sm text-slate-400 mb-2">Message</label>
                <textarea
                  rows="5"
                  placeholder="Tell us about your real estate needs..."
                  class="input-premium w-full resize-none"
                  required></textarea>
              </div>

              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="consent"
                  class="mt-1 w-4 h-4 rounded border-slate-600 bg-slate-800 text-accent-500 focus:ring-accent-500"
                />
                <label for="consent" class="text-sm text-slate-400">
                  I agree to receive communications from Luxe Estates. You can
                  unsubscribe at any time.
                </label>
              </div>

              <button type="submit" class="btn-primary w-full md:w-auto">
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Contact Cards -->
          <div
            class="glass rounded-2xl p-6 group hover:border-accent-500/30 transition-colors"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-accent-500 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  Visit Our Office
                </h3>
                <p class="text-slate-400 text-sm leading-relaxed">
                  123 Luxury Lane, Suite 500<br />
                  Beverly Hills, CA 90210<br />
                  United States
                </p>
              </div>
            </div>
          </div>

          <div
            class="glass rounded-2xl p-6 group hover:border-accent-500/30 transition-colors"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-accent-500 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">Call Us</h3>
                <p class="text-slate-400 text-sm">
                  Main: <a
                    href="tel:+15551234567"
                    class="text-accent-500 hover:underline">+1 (555) 123-4567</a
                  ><br />
                  Toll-Free: <a
                    href="tel:+18001234567"
                    class="text-accent-500 hover:underline">+1 (800) 123-4567</a
                  >
                </p>
              </div>
            </div>
          </div>

          <div
            class="glass rounded-2xl p-6 group hover:border-accent-500/30 transition-colors"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-accent-500 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">Email Us</h3>
                <p class="text-slate-400 text-sm">
                  General: <a
                    href="mailto:hello@luxeestates.com"
                    class="text-accent-500 hover:underline"
                    >hello@luxeestates.com</a
                  ><br />
                  Sales: <a
                    href="mailto:sales@luxeestates.com"
                    class="text-accent-500 hover:underline"
                    >sales@luxeestates.com</a
                  >
                </p>
              </div>
            </div>
          </div>

          <div
            class="glass rounded-2xl p-6 group hover:border-accent-500/30 transition-colors"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-accent-500 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  Business Hours
                </h3>
                <p class="text-slate-400 text-sm leading-relaxed">
                  Monday - Friday: 9:00 AM - 7:00 PM<br />
                  Saturday: 10:00 AM - 5:00 PM<br />
                  Sunday: By Appointment
                </p>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="glass rounded-2xl p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Follow Us</h3>
            <div class="flex gap-3">
              <a
                href="#"
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-slate-400 hover:text-accent-500 hover:border-accent-500/50 transition-all"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                  ><path
                    d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
                  ></path></svg
                >
              </a>
              <a
                href="#"
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-slate-400 hover:text-accent-500 hover:border-accent-500/50 transition-all"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                  ><path
                    d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
                  ></path></svg
                >
              </a>
              <a
                href="#"
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-slate-400 hover:text-accent-500 hover:border-accent-500/50 transition-all"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                  ><rect
                    x="2"
                    y="2"
                    width="20"
                    height="20"
                    rx="5"
                    ry="5"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"></rect><circle
                    cx="12"
                    cy="12"
                    r="4"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"></circle><circle cx="18" cy="6" r="1.5"
                  ></circle></svg
                >
              </a>
              <a
                href="#"
                class="w-12 h-12 rounded-xl glass-light flex items-center justify-center text-slate-400 hover:text-accent-500 hover:border-accent-500/50 transition-all"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                  ><path
                    d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
                  ></path><circle cx="4" cy="4" r="2"></circle></svg
                >
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16">
    <div class="container-premium">
      <div class="glass rounded-3xl overflow-hidden">
        <div
          class="h-96 bg-slate-800 flex items-center justify-center relative"
        >
          <!-- Placeholder Map -->
          <div class="absolute inset-0 opacity-50">
            <img
              src="https://images.unsplash.com/photo-1524661135-423995f22d0b?w=1200&h=600&fit=crop"
              alt="Map"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="relative z-10 text-center">
            <div
              class="w-16 h-16 rounded-full bg-accent-500 flex items-center justify-center mx-auto mb-4 shadow-glow animate-bounce-subtle"
            >
              <svg
                class="w-8 h-8 text-primary-900"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                ></path>
              </svg>
            </div>
            <p class="text-white font-semibold">Beverly Hills, California</p>
            <a
              href="https://maps.google.com"
              target="_blank"
              class="text-accent-500 text-sm hover:underline mt-2 inline-block"
            >
              Open in Google Maps â†’
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer client:load />
</BaseLayout>
